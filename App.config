<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>

	<!-- 應用程序設置 -->
	<appSettings>
		<!-- 應用程序標題 -->
		<add key="ApplicationTitle" value="BlueCg 進程監控管理系統" />

		<!-- 版本號 -->
		<add key="Version" value="1.0.0" />

		<!-- 默認監控間隔（毫秒） -->
		<add key="MonitorInterval" value="1000" />

		<!-- 默認無回應時間（秒） -->
		<add key="DefaultNoResponseTime" value="20" />

		<!-- 是否自動啟動監控 -->
		<add key="AutoStartMonitoring" value="false" />

		<!-- 最大重啟次數 -->
		<add key="MaxRestartCount" value="10" />

		<!-- 重啟間隔（毫秒） -->
		<add key="RestartDelay" value="2000" />

		<!-- 是否記錄詳細日誌 -->
		<add key="VerboseLogging" value="true" />

		<!-- 進程健康檢查間隔（毫秒） -->
		<add key="HealthCheckInterval" value="5000" />

		<!-- 內存使用警告閾值（MB） -->
		<add key="MemoryWarningThreshold" value="1024" />

		<!-- CPU使用警告閾值（%） -->
		<add key="CpuWarningThreshold" value="80" />

		<!-- 是否啟動時最小化 -->
		<add key="StartMinimized" value="false" />

		<!-- 是否最小化到系統托盤 -->
		<add key="MinimizeToTray" value="true" />

		<!-- 是否開機自動啟動 -->
		<add key="AutoStartWithWindows" value="false" />

		<!-- 配置文件保存路徑 -->
		<add key="ConfigSavePath" value="Config" />

		<!-- 是否檢查更新 -->
		<add key="CheckForUpdates" value="true" />

		<!-- 更新檢查間隔（小時） -->
		<add key="UpdateCheckInterval" value="24" />

		<!-- 語言設置 -->
		<add key="Language" value="zh-TW" />

		<!-- 主題設置 -->
		<add key="Theme" value="Default" />

		<!-- 窗口大小和位置保存 -->
		<add key="SaveWindowState" value="true" />

		<!-- 默認窗口寬度 -->
		<add key="DefaultWindowWidth" value="1200" />

		<!-- 默認窗口高度 -->
		<add key="DefaultWindowHeight" value="700" />

		<!-- 是否顯示啟動畫面 -->
		<add key="ShowSplashScreen" value="false" />

		<!-- 操作確認提示 -->
		<add key="ShowConfirmationDialogs" value="true" />

		<!-- 性能監控間隔（秒） -->
		<add key="PerformanceMonitorInterval" value="10" />

		<!-- 是否啟用統計功能 -->
		<add key="EnableStatistics" value="true" />

		<!-- 通知設置 -->
		<add key="ShowNotifications" value="true" />
		<add key="NotificationDuration" value="3000" />

		<!-- 備份設置 -->
		<add key="AutoBackupConfig" value="true" />
		<add key="BackupInterval" value="7" />
		<add key="MaxBackupFiles" value="5" />

		<!-- 安全設置 -->
		<add key="RequireAdminRights" value="false" />
		<add key="EnableAuditLog" value="false" />

		<!-- 網絡設置 -->
		<add key="NetworkTimeout" value="10000" />
		<add key="RetryCount" value="3" />

		<!-- UI設置 -->
		<add key="RefreshInterval" value="1000" />
		<add key="MaxLogDisplayLines" value="1000" />
		<add key="EnableSmoothAnimation" value="true" />

		<!-- 診斷設置 -->
		<add key="EnableDiagnostics" value="false" />
		<add key="DiagnosticsLevel" value="1" />

		<!-- 擴展功能 -->
		<add key="EnablePlugins" value="false" />
		<add key="PluginDirectory" value="Plugins" />
	</appSettings>

	<!-- 運行時配置 -->
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="System.Runtime" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.1.1.0" newVersion="4.1.1.0" />
			</dependentAssembly>
		</assemblyBinding>

		<!-- 垃圾收集設置 -->
		<gcServer enabled="false" />
		<gcConcurrent enabled="true" />

		<!-- JIT 優化 -->
		<developmentMode developerInstallation="false" />
	</runtime>
</configuration>